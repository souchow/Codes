import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class SortListAdapter implements Sorter {

    private final NumberSorter numberSorter;

    public SortListAdapter(NumberSorter numberSorter) {
        this.numberSorter = numberSorter;
    }

    @Override
    public int[] sort(int[] numbers) {
        List<Integer> numberList = new ArrayList<>();
        for (int number : numbers) {
            numberList.add(number);
        }
        List<Integer> sortedList = numberSorter.sort(numberList);
        int[] sortedNumbers = new int[sortedList.size()];
        for (int i = 0; i < sortedList.size(); i++) {
            sortedNumbers[i] = sortedList.get(i);
        }
        return sortedNumbers;
    }
}
